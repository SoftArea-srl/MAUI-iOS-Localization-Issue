<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="iOSReleaseLocalizationIssue.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Button Clicked="OnSetEngCulture" Text="Set Eng Culture" />
            <Button Clicked="OnSetDeCulture" Text="Set De Culture" />
            <Button Clicked="OnSetEsCulture" Text="Set Es Culture" />
            <Label x:Name="CultureStringLabel" />
            <Label x:Name="CurrentCultureLabel" />
            <Label x:Name="CurrentUICultureLabel" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
